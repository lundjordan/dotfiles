tmux has-session -t development
if [ $? != 0 ]
then
  TERM=screen-256color-bce tmux -2 new-session -s development -n vimGOF -d
  tmux new-window -n adminGOF -t development
  tmux new-window -n servGOF -t development
  tmux new-window -n irc -t development
  tmux new-window -n playground -t development
  tmux select-layout -t development main-vertical

  tmux split-window -h -t development:3
  tmux split-window -v -t development:3.1
  tmux send-keys -t development:3.3 'mongod &' C-m
  tmux send-keys -t development:3.1 'cd GOF' C-m
  tmux send-keys -t development:3.1 'GCOF' C-m
  tmux send-keys -t development:3.2 'cmus' C-m

  tmux send-keys -t development:1 'cd ~/devel/learn/final_project/goferIT' C-m
  tmux send-keys -t development:1 'vim -S .vim_bup.vim' C-m

  tmux send-keys -t development:4 'ssh 176.61.62.139 -R 4222:localhost:4222' C-m
  tmux send-keys -t development:4 'rs' C-m

  tmux split-window -t development:2
  tmux send-keys -t development:2.1 'cd ~/devel/learn/final_project/goferIT' C-m
  tmux send-keys -t development:2.2 'cd ~/devel/learn/final_project/goferIT' C-m
  tmux send-keys -t development:2.1 './bin/devserv' C-m
  tmux send-keys -t development:2.2 'mongo' C-m

fi
tmux attach -t development
